{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "DEBUG",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_AUTOMATION_BYPASS_SECRET",
    "BYPASS_AUTH",
    "CLERK_SECRET_KEY",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "VM0_TOKEN",
    "VM0_RUNNER_TOKEN",
    "E2B_API_KEY",
    "E2B_TEMPLATE_NAME",
    "VM0_API_URL",
    "MINIMAX_ANTHROPIC_BASE_URL",
    "MINIMAX_API_KEY",
    "R2_ACCOUNT_ID",
    "R2_ACCESS_KEY_ID",
    "R2_SECRET_ACCESS_KEY",
    "R2_USER_STORAGES_BUCKET_NAME",
    "SECRETS_ENCRYPTION_KEY",
    "OFFICIAL_RUNNER_SECRET",
    "USE_MOCK_CLAUDE",
    "CRON_SECRET",
    "AXIOM_TOKEN",
    "AXIOM_DATASET_SUFFIX",
    "WEB_APP_URL",
    "ABLY_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!**/__tests__/**",
        "!**/*.test.ts",
        "!**/*.test.tsx",
        "!**/*.spec.ts",
        "!**/*.spec.tsx",
        "!**/vitest.config.ts",
        "!**/src/test/**"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "src/sandbox/scripts/dist/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
