{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "SHELL",
    "DATABASE_URL",
    "DB_POOL_MAX",
    "DB_POOL_IDLE_TIMEOUT_MS",
    "DB_POOL_CONNECT_TIMEOUT_MS",
    "VM0_DEBUG",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_PROJECT_PRODUCTION_URL",
    "VERCEL_AUTOMATION_BYPASS_SECRET",
    "BYPASS_AUTH",
    "CLERK_SECRET_KEY",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "VITE_CLERK_PUBLISHABLE_KEY",
    "VM0_TOKEN",
    "VM0_RUNNER_TOKEN",
    "E2B_API_KEY",
    "VM0_API_URL",
    "MINIMAX_ANTHROPIC_BASE_URL",
    "MINIMAX_API_KEY",
    "R2_ACCOUNT_ID",
    "R2_ACCESS_KEY_ID",
    "R2_SECRET_ACCESS_KEY",
    "R2_USER_STORAGES_BUCKET_NAME",
    "SECRETS_ENCRYPTION_KEY",
    "OFFICIAL_RUNNER_SECRET",
    "USE_MOCK_CLAUDE",
    "CRON_SECRET",
    "AXIOM_TOKEN_SESSIONS",
    "AXIOM_TOKEN_TELEMETRY",
    "AXIOM_DATASET_SUFFIX",
    "WEB_APP_URL",
    "PLATFORM_URL",
    "ABLY_API_KEY",
    "CONCURRENT_RUN_LIMIT",
    "SLACK_CLIENT_ID",
    "SLACK_CLIENT_SECRET",
    "SLACK_SIGNING_SECRET",
    "SLACK_REDIRECT_BASE_URL",
    "GH_OAUTH_CLIENT_ID",
    "GH_OAUTH_CLIENT_SECRET",
    "CLAUDE_CODE_VERSION_URL",
    "OPENROUTER_API_KEY",
    "DEFAULT_SENTRY_DSN",
    "SENTRY_DSN",
    "SENTRY_ENVIRONMENT",
    "SENTRY_AUTH_TOKEN",
    "SENTRY_ORG",
    "SENTRY_PROJECT",
    "NEXT_PUBLIC_SENTRY_DSN",
    "VITE_SENTRY_DSN",
    "NEXT_RUNTIME",
    "NEXT_PUBLIC_VERCEL_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!**/__tests__/**",
        "!**/*.test.ts",
        "!**/*.test.tsx",
        "!**/*.spec.ts",
        "!**/*.spec.tsx",
        "!**/vitest.config.ts",
        "!**/src/test/**"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "src/sandbox/scripts/dist/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
